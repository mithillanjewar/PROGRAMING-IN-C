#include <stdio.h>

// Define a union
union Data {
    int i;
    float f;
    char str[20];
};

int main() {
    union Data data;

    // Assign and display integer
    data.i = 42;
    printf("After assigning integer:\n");
    printf("data.i = %d\n", data.i);

    // Assign and display float
    data.f = 3.14;
    printf("\nAfter assigning float:\n");
    printf("data.f = %.2f\n", data.f);

    // Assign and display string
    strcpy(data.str, "Hello Union");
    printf("\nAfter assigning string:\n");
    printf("data.str = %s\n", data.str);

    // Display all members to show memory sharing
    printf("\nAccessing all members after final assignment:\n");
    printf("data.i = %d\n", data.i);
    printf("data.f = %.2f\n", data.f);
    printf("data.str = %s\n", data.str);

    return 0;
}
